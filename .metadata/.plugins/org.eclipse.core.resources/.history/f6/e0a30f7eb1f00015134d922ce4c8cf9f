package com.maven.weekThree;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

public class StaffPositionModel {
	private int id; 
	private String name;
	
	private final static String mTableName = "staffPosition";
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}

	private static StaffPositionModel mPosModel;
	
	public ArrayList<StaffPositionModel> getAll() throws Exception{
		ArrayList<StaffPositionModel> res = new ArrayList<StaffPositionModel>();
		String sql ="select * from staffPosition";
		ResultSet rs = PostgreSQLJDBC.getInstancce().execQuery(sql);
		
		//Handle returned data 
		while(rs.next()){
			int id = rs.getInt(0); // id column
			String name = rs.getString(1); // name column 
			StaffPositionModel posModel = new StaffPositionModel(id,name);
			res.add(posModel);
		}
		return res;
	}
	/**
	 * @param id
	 * @param name
	 */
	public StaffPositionModel(int id, String name) {
		super();
		this.id = id;
		this.name = name;
	}
	/**
	 * 
	 */
	public StaffPositionModel() {
		super();
	}
	
	public static StaffPositionModel getInstancce(){
		if(mPosModel == null){
			mPosModel = new StaffPositionModel();
		}
		return mPosModel;
	}
}
